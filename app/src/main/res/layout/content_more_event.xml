<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pe.edu.upc.fitnow.activities.MoreEventActivity"
    tools:showIn="@layout/activity_more_event">
    <android.support.v7.widget.CardView
        android:id="@+id/imageDetailCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <com.androidnetworking.widget.ANImageView
            android:id="@+id/imageDetailANImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:src="@mipmap/ic_launcher" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/titleDetailCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageDetailCardView"
        android:layout_margin="8dp">
        <TextView
            android:id="@+id/titleDetailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="TITLE_EJERCICE"
            android:textAlignment="center"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/contentDetailCardView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/titleDetailCardView"
        android:layout_margin="8dp">
        <TextView
            android:id="@+id/detailDetailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DETAIL"
            android:textAlignment="center"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/listDetailCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contentDetailCardView"
        android:layout_margin="8dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/exerciceDetailRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
