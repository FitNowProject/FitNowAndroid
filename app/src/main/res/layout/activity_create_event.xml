<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.upc.fitnow.activities.CreateEventActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/createeventCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
            <TextView
                android:id="@+id/createeventTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREATE EVENT"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <ImageView
                android:id="@+id/activityImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_fitness_center_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/createeventTextView"
                android:layout_margin="15dp"/>
            <Spinner
                android:id="@+id/activitySpinner"
                android:layout_width="335dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/activityImageView"
                app:layout_constraintTop_toBottomOf="@id/createeventTextView"/>
            <ImageView
                android:id="@+id/placeImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_place_black_24dp"
                android:layout_marginTop="19dp"
                app:layout_constraintTop_toBottomOf="@id/activityImageView"/>
            <Spinner
                android:id="@+id/placeSpinner"
                android:layout_width="335dp"
                android:layout_height="40dp"
                android:hint="Place"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/placeImageView"
                app:layout_constraintTop_toBottomOf="@id/activitySpinner"/>
            <ImageView
                android:id="@+id/dateImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_date_range_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/placeImageView"
                android:layout_marginTop="23dp"/>
            <EditText
                android:id="@+id/dateEditText"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/dateImageView"
                android:inputType="none"
                android:imeOptions="actionDone"
                app:layout_constraintTop_toBottomOf="@id/placeSpinner"/>
            <TextView
                android:id="@+id/separador1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@id/dateEditText"
                app:layout_constraintTop_toBottomOf="@id/placeSpinner"/>
            <ImageView
                android:id="@+id/quantityImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_supervisor_account_black_24dp"
                app:layout_constraintStart_toEndOf="@id/separador1TextView"
                app:layout_constraintTop_toBottomOf="@id/placeImageView"
                android:layout_marginTop="23dp"/>
            <Spinner
                android:id="@+id/quantitySpinner"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:hint="NÂº people"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/quantityImageView"
                app:layout_constraintTop_toBottomOf="@id/placeSpinner"/>
            <ImageView
                android:id="@+id/timeImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_query_builder_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/dateImageView"
                android:layout_marginTop="23dp"/>
            <EditText
                android:id="@+id/starttimeEditText"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint="Start Time"
                android:layout_marginTop="10dp"
                android:imeOptions="actionDone"
                app:layout_constraintStart_toEndOf="@id/timeImageView"
                app:layout_constraintTop_toBottomOf="@id/dateEditText"/>
            <TextView
                android:id="@+id/separadorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@id/starttimeEditText"
                app:layout_constraintTop_toBottomOf="@id/dateEditText"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/timeEditText"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:hint="Time"
                android:inputType="number"
                android:digits="0,1,2,3,4,:"
                android:layout_marginTop="10dp"
                android:imeOptions="actionDone"
                app:layout_constraintStart_toEndOf="@id/separadorTextView"
                app:layout_constraintTop_toBottomOf="@id/dateEditText"/>
            <ImageView
                android:id="@+id/descriptionImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/timeImageView"
                android:layout_marginTop="23dp"/>
            <EditText
                android:id="@+id/descriptionEditText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/descriptionImageView"
                app:layout_constraintTop_toBottomOf="@id/starttimeEditText"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/exerciceRecyclerView"
        android:layout_width="390dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@id/createeventCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
