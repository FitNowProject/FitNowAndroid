<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/default_margin"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">


        <TextView
            android:id="@+id/type_eventTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TYPE EVENT"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <View
            android:id="@+id/lineaView"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/type_eventTextView"
            android:background="#ffd5d5d5"
            android:layout_margin="8dp"/>
        <ImageView
            android:id="@+id/pictureImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toBottomOf="@+id/type_eventTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="8dp" />
        <View
            android:id="@+id/linea2View"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/pictureImageView"
            android:background="#ffd5d5d5"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/ADDRESS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDRESS:"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/pictureImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDRESS"
            app:layout_constraintTop_toBottomOf="@+id/pictureImageView"
            app:layout_constraintStart_toEndOf="@id/ADDRESS"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE"
            app:layout_constraintTop_toBottomOf="@+id/pictureImageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp" />
        <TextView
            android:id="@+id/DATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE:"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/pictureImageView"
            app:layout_constraintEnd_toStartOf="@id/dateTextView"
            android:layout_margin="8dp" />
        <View
            android:id="@+id/linea3View"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView"
            android:background="#ffd5d5d5"
            android:layout_margin="8dp" />
        <TextView
            android:id="@+id/HOUR_START"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOUR START:"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView"
            android:layout_margin="8dp" />
        <TextView
            android:id="@+id/hour_startTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOUR_START"
            app:layout_constraintStart_toEndOf="@id/HOUR_START"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView"
            android:layout_margin="8dp" />
        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView"
            android:layout_margin="8dp" />
        <TextView
            android:id="@+id/TIME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME:"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toStartOf="@id/timeTextView"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView"
            android:layout_margin="8dp" />
        <View
            android:id="@+id/linea4View"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/timeTextView"
            android:background="#ffd5d5d5"
            android:layout_margin="8dp" />
        <TextView
            android:id="@+id/MEMBERS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEMBERS:"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeTextView"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/membersTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEMBERS"
            app:layout_constraintStart_toEndOf="@id/MEMBERS"
            app:layout_constraintTop_toBottomOf="@+id/timeTextView"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/moreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="@dimen/default_margin"
            android:text="@string/card_event_more_title"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@id/membersTextview"
            app:layout_constraintEnd_toEndOf="parent"
             />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>