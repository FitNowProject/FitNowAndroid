<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.upc.fitnow.activities.RegisterActivity">


    <ImageView
        android:id="@+id/regLogoImageView"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/fitnowlogo"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/regTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/regLogoImageView"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/regFNEditText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:hint="First Name"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/regTitleTextView"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/regLNEditText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:hint="Last Name"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/regFNEditText"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/regEmailEditText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:hint="Email"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/regLNEditText"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/regPassEditText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:hint="Password"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/regEmailEditText"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/regCreateAccButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="CREATE ACCOUNT"
        android:background="#fff"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/regPassEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>
